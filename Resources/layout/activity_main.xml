<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonShareText"
        android:text="Share_text"/>
    <Button
        android:text="Share_Link"
        android:layout_width="match_parent"
        android:layout_below="@+id/ButtonShareText"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonSharelink"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonSharelink"
        android:text="Share_Attachment"
        android:id="@+id/ButtonShareAttachment"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonShareAttachment"
        android:text="Share_Multiple_Attachment"
        android:id="@+id/ButtonShareMultiplleAttachment"/>

</RelativeLayout>